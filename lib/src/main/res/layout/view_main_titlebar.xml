<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/colorPrimaryDark"
    android:layout_width="match_parent"
    android:layout_height="40dp">
    <TextView android:textSize="15sp" android:textColor="@color/dview_title_bar_text" android:id="@+id/tv_titlebar_left" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="12dp" android:layout_alignParentLeft="true" android:layout_centerVertical="true" />
    <TextView android:textSize="20sp" android:textColor="@color/dview_title_bar_text" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/my_files" android:layout_centerHorizontal="true" android:layout_centerVertical="true" />
    <TextView android:textSize="15sp" android:textColor="@color/dview_title_bar_text" android:id="@+id/tv_titlebar_right" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="12dp" android:layout_alignParentRight="true" android:layout_centerVertical="true" />
</RelativeLayout>